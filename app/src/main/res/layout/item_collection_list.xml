<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <ImageView
            android:id="@+id/iv_collections_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_movie"/>

        <LinearLayout
            android:id="@+id/ll_moban"
            android:background="@drawable/boman_selector_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_collections_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="测试"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"/>

                <TextView
                    android:id="@+id/tv_collections_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_collections_name"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="动画  / 16'29"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>
            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>